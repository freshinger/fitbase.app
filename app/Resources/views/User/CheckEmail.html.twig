{% extends "content.html.twig" %}

{% block title %}
    <h1>{{ 'user.password_reset'|trans({}, 'FitbaseUserBundle') }}</h1>
{% endblock title %}

{% block breadcrumbs %}
    <div class="crumbs">
        <div class="container">
            <ul>
                <li>{{ 'user.password_reset'|trans({}, 'FitbaseUserBundle') }}</li>
            </ul>
        </div>
    </div>
{% endblock breadcrumbs %}

{% block content %}
