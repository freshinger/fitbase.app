/* company-defined theme colors */

{% set color="#88C425" %}
{% if company is defined %}
    {% if company.background1 is defined %}
        {% if company.background1|length %}
            {% set color="##{company.background1}" %}
        {% endif %}
    {% endif %}
{% endif %}


/* Custom theme fixes*/
h1 {
text-transform: uppercase;
}
nav.mainmenu {
{#text-transform: uppercase;#}
}

div.title-image-bottom {
margin-bottom: 0px;
}

.logo img {
vertical-align: middle;
padding-top: 30px;
}


.dark-home {
    height: auto;
    padding-bottom: 20px;
}

.padding-top {
    padding-top: 20px;
}

.padding-bottom {
    padding-bottom: 20px;
}

.text-over-image {
    position:absolute;
    top:20px;
    left:30px;
    width:300px;
    background-color: #ffffff;
    padding: 10px;
}


.text-cut {
width : 100%;
overflow:hidden;
text-overflow: ellipsis;
white-space: nowrap;
}


/* Backgrounds ----------------------------------------------------------*/

.camera_prevThumbs, .camera_nextThumbs, .camera_prev, .camera_next, .camera_commands, .camera_thumbs_cont,
.camera_wrap .camera_pag .camera_pag_ul li.cameracurrent > span,
.btn-primary,
.btn-primary:hover,
.style-caption h1,
.nav-tabs li.active a,
.nav-tabs li.active a:hover,
.nav-tabs li a:hover,
.title-color,
.tags a:hover,
.title-aside,
.pagination .active,
.info-player h4 a,
.tooltip-inner,
.portfolioFilter .current,
.portfolioFilter a:hover,
.owl-theme .owl-controls .owl-buttons div,
#theme-options .layout-style li.active,
.thumbs li:hover,
.owl-theme .owl-controls .owl-page.active span,
.owl-theme .owl-controls.clickable .owl-page:hover span,
.pagination > .active > a,

.pagination > .active:hover > a {
background: {{ color }};
background-color: {{ color }};
}

.footer-down {
background: {{ color }} url("../../../img/img-theme/footer-down.png") repeat-x left 1px;
}

.events-carousel li .header-post .date {
background: {{ color }};
background: rgba(136, 196, 37, 0.6);
}

/* Colors ----------------------------------------------------------*/

blockquote > a,
.tweet_time a,
.tweet_text a,
.tags i,
.text-resalt,
.post-item h4 a:hover,
.post-item p a,
.links li i,
.entry-title a,
.info-clubs h4 a:hover,
.sf-menu .sf-mega ul li a:hover,
.sf-menu li li a:hover,
.crumbs ul li a:hover,
.acc-trigger a:hover, .acc-trigger.active a, .acc-trigger.active a:hover,
.crumbs li a,
.page-error h1 i,
.sitemap li a:hover,
.pagination > li > a, .pagination > li > span,
address i,
address a,
.list li i,
.events-carousel h4 a,
.pagination > li:hover a {
color: {{ color }};
}

/* Borders ----------------------------------------------------------*/

.nav-tabs li.active:after {
border: 6px solid {{ color }};
border-left-color: transparent;
border-right-color: transparent;
border-bottom-color: transparent;
bottom: -11px;
content: "";
left: 50%;
margin-left: -6px;
position: absolute;
z-index: 101;
}

.style-caption p,
.item-clubs {
border-right: 5px solid {{ color }};
}

.titles h4 {
border-left: 5px solid {{ color }};
}

.pagination > .active > a,
.pagination > .active:hover > a {
border-color: {{ color }};
}

.style-caption h1:before {
border-top: 40px solid transparent;
border-bottom: 40px solid transparent;
border-left: 40px solid {{ color }};
}

.crumbs:before {
border-bottom: 20px solid {{ color }};
}

.tooltip.top .tooltip-arrow {
border-top-color: {{ color }};
}

.sf-menu li:hover > .sf-mega,
.sf-menu li.sfHover > .sf-mega,
.mainmenu,
.sf-menu .sub-current,
.header-2,
.header-2 .is-sticky {
border-bottom: 3px solid {{ color }};
}

header,
.overlay-player,
.crumbs {
border-top: 3px solid {{ color }};
}

.sf-arrows > li > .sf-with-ul:focus:after,
.sf-arrows > li:hover > .sf-with-ul:after,
.sf-arrows > .sfHover > .sf-with-ul:after {
border-top-color: {{ color }}; /* IE8 fallback colour */
}

ul.sub-current .current > .sf-with-ul:focus:after,
ul.sub-current .current:hover > .sf-with-ul:after,
ul.sub-current .current .sfHover > .sf-with-ul:after {
border-left-color: {{ color }}; /* IE8 fallback colour */
}