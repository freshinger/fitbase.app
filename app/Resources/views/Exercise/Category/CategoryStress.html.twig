{% extends 'Exercise/Category/Category.html.twig' %}

{% block content_category %}
    <div class="row">
        <div class="col-xs-9">
            {{ sonata_block_render({ 'type': 'fitbase.block.exercise_random' }, { 'category': category }) }}
        </div>

        {% if exercises is defined %}
            <div class="col-xs-3">
                {% for exercise in exercises|slice(0, 7) %}
                    <div class="panel-box">
                        <div class="titles">
                            <h4>{{ exercise.name }}</h4>
                        </div>
                        <ul class="single-carousel owl-carousel owl-theme" style="opacity: 1; display: block;">
                            <div class="owl-wrapper-outer autoHeight">
                                <div class="owl-wrapper" style="left: 0px; display: block;">
                                    <div class="owl-item">
                                        <li>
                                            <a href="{{ path('exercise', { 'unique': exercise.id}) }}">
                                                {% thumbnail exercise.image, 'thumbnail'  with {'width': '360px', 'title': null, 'class': 'img-responsive' } %}
                                            </a>

                                            <div class="info-single-carousel">
                                                <p>
                                                    {{ exercise.description|raw|striptags|slice(0,120) }}...
                                                    <a href="{{ path('exercise', { 'unique': exercise.id}) }}">
                                                        {{ "Mehr..." | trans({}, 'FitbaseExerciseBundle') }}
                                                    </a>
                                                </p>
                                            </div>
                                        </li>
                                    </div>
                                </div>
                            </div>
                        </ul>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock content_category %}
