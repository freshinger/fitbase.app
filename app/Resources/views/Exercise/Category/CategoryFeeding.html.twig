{% extends 'Exercise/Category/Category.html.twig' %}

{% block title %}
    <h1>{{ 'exercise.exercise_feeding'|trans({}, 'FitbaseExerciseBundle') }}</h1>
{% endblock title %}

{% block content_category %}
    <div class="row">
        <div class="col-md-12">
            <p>{{ 'exercise.exercise_feeding_info'|trans({}, 'FitbaseExerciseBundle') }}</p>
        </div>
        <div class="col-md-6">
            <div class="panel-box">
                <div class="titles title-image-bottom">
                    <h4>{{ 'exercise.exercise_personal_beheviour'|trans({}, 'FitbaseExerciseBundle') }}</h4>
                </div>
                <div class="row">
                    <div class="col-md-12" style="text-align: center;">
                        <div style="height: 430px; overflow-y: scroll;">
                            {% if history is defined and history %}
                                {% for key, row in history %}
                                    {{ pie(key, row)|raw }}
                                {% endfor %}
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="panel-box">
                <div class="titles title-image-bottom">
                    <h4>{{ 'exercise.exercise_optimal_beheviour'|trans({}, 'FitbaseExerciseBundle') }}</h4>
                </div>

                <div class="row">
                    <div class="col-md-12" style="text-align: center;">
                        {{ pie("", groups)|raw }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock content_category %}


{% block content_bottom %}
    <!-- Sponsors -->
    <div class="section-wide">
        <div class="container">

            <div class="row">
                <div class="col-xs-6">

                    <h3>{{ 'exercise.exercise_feeding_title'|trans({}, 'FitbaseExerciseBundle') }}</h3>

                    <br/>

                    {% form_theme form "Exercise/Category/CategoryFeedingForm.html.twig" %}
                    {{ form(form) }}

                </div>
                <div class="col-xs-6">
                    <h3>{{ 'exercise.exercise_feeding_title'|trans({}, 'FitbaseExerciseBundle') }}</h3>

                    <br/>

                    <div style="height: 450px; overflow-y: scroll;">


                        <table class="table table-striped table-hover table-responsive">
                            <tbody>
                            {% if collection is defined and collection %}
                                {% for feeding in collection %}
                                    <tr>
                                        <td>{{ feeding.date|date('d.m.Y') }}</td>
                                        <td>&nbsp;</td>
                                        <td>&nbsp;</td>
                                    </tr>
                                    <tr>
                                        <td>&nbsp;</td>
                                        <td colspan="2">
                                            <table>
                                                <tbody>
                                                {% for item in feeding.items %}
                                                    <tr>
                                                        <td>{{ item.group }}</td>
                                                        <td>{{ item.count }} Portion</td>
                                                    </tr>
                                                {% endfor %}
                                                </tbody>
                                            </table>
                                        </td>
                                    </tr>

                                {% endfor %}
                            {% else %}
                                <tr>
                                    <td colspan="3">
                                        {{ "exercise.exercise_feeding_empty" | trans({}, 'FitbaseExerciseBundle') }}
                                    </td>
                                </tr>
                            {% endif %}
                            </tbody>
                        </table>
                    </div>

                </div>

            </div>

        </div>
    </div>
    <!-- End Sponsors -->
{% endblock content_bottom %}
