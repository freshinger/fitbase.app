<!-- Content Text-->
<div class="panel-box">
    {% block exercise_list_title %}
        <div class="titles">
            <h4>{{ category }}</h4>
        </div>
    {% endblock exercise_list_title %}

    {% set limit = 3 %}


    {% if collection|length > 0 %}
        {% for exerciseChoice in collection | slice(0,limit) %}
            {% set exercise = exerciseChoice.exercise %}

            {% block exercise_list_item %}
                <div class="post-item">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="img-hover">
                                {% thumbnail exercise.image, 'thumbnail'  with { 'title': null, 'class': 'img-responsive' } %}

                                <div class="overlay"><a href="{{ path('exercise', { 'unique': exercise.id}) }}">+</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <h4>
                                <a href="{{ path('exercise', { 'unique': exercise.id}) }}">
                                    {{ exercise.name }}
                                </a>
                            </h4>

                            <p>
                                {{ exercise.description|raw|striptags|slice(0,300) }}...
                                <a href="{{ path('exercise', { 'unique': exercise.id}) }}">
                                    {{ "Mehr..." | trans({}, 'FitbaseExerciseBundle') }}
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            {% endblock exercise_list_item %}

        {% endfor %}

        {% if collection|length > limit %}


            <div class="post-items-content" style="display: none;">
                {% for exerciseChoice in collection | slice(limit,null) %}
                    {% set exercise = exerciseChoice.exercise %}

                    <div class="post-item">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="img-hover">
                                    {% thumbnail exercise.image, 'thumbnail'  with { 'title': null, 'class': 'img-responsive' } %}

                                    <div class="overlay">
                                        <a href="{{ path('exercise', { 'unique': exercise.id}) }}">+</a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-8">
                                <h4>
                                    <a href="{{ path('exercise', { 'unique': exercise.id}) }}">
                                        {{ exercise.name }}
                                    </a>
                                </h4>

                                <p>
                                    {{ exercise.description|raw|striptags|slice(0,300) }}...
                                    <a href="{{ path('exercise', { 'unique': exercise.id}) }}">
                                        {{ "Mehr..." | trans({}, 'FitbaseExerciseBundle') }}
                                    </a>
                                </p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <div class="post-item">
                <div class="row">
                    <div class="col-md-12 text-center">
                        <a href="#" class="post-items-trigger btn btn-default">
                            {{ "Mehr Übungen..." | trans({}, 'FitbaseExerciseBundle') }}
                        </a>
                    </div>
                </div>
            </div>

        {% endif %}





    {% else %}

        {% block exercise_list_empty %}
            <!-- Empty content Text-->
            <div class="post-item">
                <div class="row">
                    <div class="col-md-12">
                        {{ "Sie haben noch keine Lieblingsübungen in diesem Bereich." | trans({}, 'FitbaseExerciseBundle') }}
                    </div>
                </div>
            </div>
            <!-- End Empty Content Text-->
        {% endblock exercise_list_empty %}

    {% endif %}
</div>
<!-- End Content Text-->

<script type="text/javascript">
    $(function () {
        var $trigger = $('.post-items-trigger');
        var $content = $('.post-items-content');

        $trigger.click(function (event) {
            var $element = $(this);
            $element.toggleText('{{ "Weniger Übungen..." | trans({}, 'FitbaseExerciseBundle') }}', '{{ "Mehr Übungen..." | trans({}, 'FitbaseExerciseBundle') }}');
            $element.closest('div.post-item').prev().toggle();
            event.preventDefault();
        });


    });
</script>


