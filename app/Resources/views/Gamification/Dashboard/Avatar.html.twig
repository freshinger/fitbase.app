{% extends "content.html.twig" %}

{% block title %}
    <h1>{{ 'gamification.start_page'|trans({}, 'FitbaseGamificationBundle') }}</h1>
{% endblock title %}

{% block breadcrumbs %}
    <div class="crumbs">
        <div class="container">
            <ul>
                <li>{{ 'gamification.start_page'|trans({}, 'FitbaseGamificationBundle') }}</li>
            </ul>
        </div>
    </div>
{% endblock breadcrumbs %}

{% block content %}
    <div class="panel-box">
        <div class="titles">
            <h4>{{ 'gamification.avatar_change'|trans({}, 'FitbaseGamificationBundle') }}</h4>
        </div>
        <div class="row">
            <div class="col-md-12">

                <div class="row">
                    <div class="col-xs-12">
                        <h3 class="modal-title">
                            {{ 'gamification.avatar_change_info'|trans({}, 'FitbaseGamificationBundle') }}
                        </h3>
                    </div>
                </div>

                {% form_theme form "Gamification/Dashboard/AvatarForm.html.twig" %}

                {{ form(form) }}

            </div>
        </div>
    </div>
{% endblock content %}


