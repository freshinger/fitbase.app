<!-- Content Text-->
<div class="panel-box">
    <div class="titles">
        <h4>{{ 'gamification.dashboard_focus'|trans({}, 'FitbaseGamificationBundle') }}</h4>
    </div>
    <div class="row" style="min-height: 400px;">
        <div class="col-md-12">

            <div class="row">
                {% if category is defined and category %}
                    <div class="col-md-4" align="center" style="margin-top: 10px; margin-bottom: 15px">
                        {% if category is defined and category %}
                            <a href="{{ path('focus', {'slug': category.slug}) }}">
                                {% if category.media is defined %}
                                    {% thumbnail category.media, 'preview' with {'width': 75, 'title': null } %}
                                {% endif %}
                            </a>
                        {% endif %}
                    </div>
                {% endif %}

                <div class="col-md-8">
                    {% if category is defined and category %}
                        <p>{{ 'gamification.dashboard_focus_info'|trans({ 'name': category.name }, 'FitbaseGamificationBundle') }}</p>
                    {% endif %}

                    {% if nextWeeklytask is defined and nextWeeklytask %}
                        <p>{{ 'gamification.dashboard_focus_weeklytask'|trans({ 'next_date': nextWeeklytask }, 'FitbaseGamificationBundle') }}</p>
                    {% endif %}

                    {% if nextExercise is defined and nextExercise %}
                        <p>{{ 'gamification.dashboard_focus_exercise'|trans({ 'next_exercise': nextExercise }, 'FitbaseGamificationBundle') }}</p>
                    {% endif %}
                </div>

                {% if collection is defined and collection %}
                    <div class="col-md-12">
                        <h4>{{ 'gamification.dashboard_weeklytask_info'|trans({}, 'FitbaseGamificationBundle') }}</h4>
                        <table class="table table-striped table-hover table-responsive">
                            <tbody>
                            {% for task in collection %}
                                {% if task is defined and task %}
                                    <tr>
                                        <td class="shade">
                                            {{ task.task }}
                                        </td>
                                        <td class="shade">
                                            <a href="{{ path('weeklytask_user_view', { 'unique': task.id } ) }}">
                                                {{ 'gamification.dashboard_focus_more'|trans({}, 'FitbaseGamificationBundle') }}
                                            </a>
                                        </td>
                                    </tr>
                                {% endif %}
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    {% if form is defined and form %}
        <div class="panel-footer">
            {% form_theme form "Gamification/Dashboard/UserFocusForm.html.twig" %}

            {{ form(form) }}
        </div>
    {% endif %}

</div>
<!-- End Content Text-->