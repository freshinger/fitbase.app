<div class="panel-box">
    <div class="titles title-image-bottom">
        <h4>{{ 'gamification.dashboard_avatar'|trans({}, 'FitbaseGamificationBundle') }}</h4>
    </div>

    <ul class="single-carousel owl-carousel owl-theme" style="display: block; margin-bottom: 20px;">
        <div class="owl-wrapper-outer autoHeight">
            <div class="owl-wrapper" style="left: 0px; display: block;">
                <li>
                    <img class="img-responsive" title="{{ 'gamification.dashboard_avatar'|trans({}, 'FitbaseGamificationBundle') }}"
                         src="{{ path('gamification_picture_avatar') }}">
                </li>
            </div>
        </div>
    </ul>

    <div class="row" style="min-height: 178px;">
        <div class="col-md-12">

            <div class="row">
                <div class="col-xs-12">
                    <p>{{ 'gamification.dashboard_avatar_info'|trans({}, 'FitbaseGamificationBundle') }}</p>

                    {% if activity is defined and activity %}
                        <p>{{ 'gamification.dashboard_avatar_activity'|trans({'points': activity.countPointTotal|number_format(0, '.', ' ') }, 'FitbaseGamificationBundle') }}</p>
                    {% endif %}
                </div>
            </div>

        </div>
    </div>

    <div class="panel-footer">
        {% form_theme form "Gamification/Dashboard/UserAvatarForm.html.twig" %}

        {{ form(form) }}
    </div>
</div>