{% extends "SonataUserBundle:Profile:action.html.twig" %}

{% block sonata_profile_content %}
    {#{% sonata_template_box 'This is the user profile template. Feel free to override it.' %}#}

    <style>
        .ui-state-active, .ui-widget-content .ui-state-active, .ui-widget-header .ui-state-active {
            border: none !important;
        }

        .ui-state-default, .ui-widget-content .ui-state-default, .ui-widget-header .ui-state-default {
            color: black !important;
        }

        .ui-state-default, .ui-widget-content .ui-state-default, .ui-widget-header .ui-state-default {
            background: none !important;
        }

        .ui-widget-content {
            border: none !important;
        }
    </style>
    <script type="text/javascript">
        $(function () {
            var container = $(document);
            var accordion = container.find(".profile-tabs").accordion({
                active: 0,
                heightStyle: "content"
            });

            container.bind('form', function (event) {
                var elements = container.find(".panel-info");
                elements.each(function (index, element) {
                    var element = $(element);
                    if (element.find(event.selector).length) {
                        container.find(".profile-tabs")
                                .accordion("option", "active", index);
                    }
                });
            })

        });
    </script>

    <div class="row row-fluid profile-tabs">
    {% set has_center = false %}
    {% for block in blocks %}
        {% if block.position == 'center' %}
            {% set has_center = true %}
        {% endif %}
    {% endfor %}

    {% set has_right = false %}
    {% for block in blocks %}
        {% if block.position == 'right' %}
            {% set has_right = true %}
        {% endif %}
    {% endfor %}

    {% set has_left = false %}
    {% for block in blocks %}
        {% if block.position == 'left' %}
            {% set has_left = true %}
        {% endif %}
    {% endfor %}


    {% if has_center and not has_left and not  has_right %}
        {% for block in blocks %}
            {% if block.position == 'center' %}
                {{ sonata_block_render({ 'type': block.type, 'settings': block.settings}) }}
            {% endif %}
        {% endfor %}

    {% else %}


        <div class="{% if has_center %}span4 col-lg-4{% else %}span6 col-lg-6{% endif %}">
            {% for block in blocks %}
                {% if block.position == 'left' %}
                    {{ sonata_block_render({ 'type': block.type, 'settings': block.settings}) }}
                {% endif %}
            {% endfor %}
        </div>

        {% if has_center %}
            <div class="span4 col-lg-4">
                {% for block in blocks %}
                    {% if block.position == 'center' %}
                        {{ sonata_block_render({ 'type': block.type, 'settings': block.settings}) }}
                    {% endif %}
                {% endfor %}
            </div>
        {% endif %}

        <div class="{% if has_center %}span4 col-lg-4{% else %}span6 col-lg-6{% endif %}">
            {% for block in blocks %}
                {% if block.position == 'right' %}
                    {{ sonata_block_render({ 'type': block.type, 'settings': block.settings}) }}
                {% endif %}
            {% endfor %}
        </div>
        </div>

    {% endif %}


{% endblock %}