<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Wellbeing\Bundle\ErgonomicsBundle\Entity\UserErgonomicsBodyUpperLean"
            repository-class="Wellbeing\Bundle\ErgonomicsBundle\Repository\UserErgonomicsBodyUpperLeanRepository">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        <field name="correct" type="boolean" column="correct" nullable="true"/>
        <field name="angle" type="float" column="angle"/>

        <one-to-one field="ergonomics" target-entity="Wellbeing\Bundle\ErgonomicsBundle\Entity\UserErgonomics">
            <join-column name="ergonomicsId" referenced-column-name="id" on-delete="CASCADE"/>
        </one-to-one>

    </entity>
</doctrine-mapping>
