<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Wellbeing\Bundle\ErgonomicsBundle\Entity\UserErgonomicsMessage"
            repository-class="Wellbeing\Bundle\ErgonomicsBundle\Repository\UserErgonomicsMessageRepository">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="correct" type="boolean" column="correct"/>

        <field name="date" type="datetime" column="date"/>
        <field name="processed" type="boolean" column="processed" nullable="true"/>
        <field name="processedDate" type="datetime" column="processedDate" nullable="true"/>

        <many-to-one field="user" target-entity="Application\Sonata\UserBundle\Entity\User">
            <join-column name="userId" referenced-column-name="id" on-delete="CASCADE"/>
        </many-to-one>

        <one-to-many field="ergonomics" target-entity="Wellbeing\Bundle\ErgonomicsBundle\Entity\UserErgonomics" mapped-by="message">
            <order-by>
                <order-by-field name="id" direction="DESC"/>
            </order-by>
            <cascade>
                <cascade-all/>
            </cascade>
        </one-to-many>

        <lifecycle-callbacks>
            <lifecycle-callback type="postPersist" method="onPostPersist"/>
        </lifecycle-callbacks>

    </entity>
</doctrine-mapping>
