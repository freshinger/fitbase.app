<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

        <service id="wellbeing.dashboard.ergonomics_message" class="Wellbeing\Bundle\ErgonomicsBundle\Block\UserErgonomicsMessageBlock">
            <tag name="sonata.block"/>
            <argument>wellbeing.dashboard.ergonomics_message</argument>
            <argument type="service" id="templating"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <call method="setServiceUser">
                <argument type="service" id="user"/>
            </call>
        </service>

    </services>
</container>
