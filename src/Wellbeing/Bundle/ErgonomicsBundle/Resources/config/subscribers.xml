<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="wellbeing.subscriber.user_ergonomics.body_upper_forward" class="Wellbeing\Bundle\ErgonomicsBundle\Subscriber\UserErgonomicsBodyUpperForwardSubscriber">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="wellbeing.subscriber.user_ergonomics.body_upper_lean" class="Wellbeing\Bundle\ErgonomicsBundle\Subscriber\UserErgonomicsBodyUpperLeanSubscriber">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="wellbeing.subscriber.user_ergonomics.body_upper_rotation" class="Wellbeing\Bundle\ErgonomicsBundle\Subscriber\UserErgonomicsBodyUpperRotationSubscriber">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="wellbeing.subscriber.user_ergonomics.neck" class="Wellbeing\Bundle\ErgonomicsBundle\Subscriber\UserErgonomicsNeckSubscriber">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <tag name="kernel.event_subscriber"/>
        </service>

    </services>
</container>
