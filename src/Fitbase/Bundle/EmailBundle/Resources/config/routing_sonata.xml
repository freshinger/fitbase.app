<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="sonata_admin_email_exercise_user" pattern="/email/exercise/user/{unique}">
        <default key="_controller">FitbaseEmailBundle:Admin:emailExerciseUser</default>
    </route>

    <route id="sonata_admin_email_weeklytask_user" pattern="/email/weeklytask/user/{unique}">
        <default key="_controller">FitbaseEmailBundle:Admin:emailWeeklytaskUser</default>
    </route>

    <route id="sonata_admin_email_weeklytask" pattern="/email/weeklytask/{unique}">
        <default key="_controller">FitbaseEmailBundle:Admin:emailWeeklytask</default>
    </route>
    <route id="sonata_admin_email_weeklyquiz" pattern="/email/weeklyquiz/{unique}">
        <default key="_controller">FitbaseEmailBundle:Admin:emailWeeklyquiz</default>
    </route>

    <route id="sonata_admin_email_user_registration" pattern="/email/user/registration/{unique}">
        <default key="_controller">FitbaseEmailBundle:Admin:emailUserRegistration</default>
    </route>


</routes>
