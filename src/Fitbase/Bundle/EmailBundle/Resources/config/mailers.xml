<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">


    <services>

        <service id="mailer.patcher.link_code" class="Fitbase\Bundle\EmailBundle\Mailer\Patcher\PatcherLinkCode">
            <argument>%fitbase.project.scheme%</argument>
            <argument>%fitbase.project.host%</argument>
            <argument type="service" id="fitbase_helper.email.signon"/>
        </service>

        <service id="mailer.patcher.image_attach" class="Fitbase\Bundle\EmailBundle\Mailer\Patcher\PatcherImageAttach">
            <argument>%fitbase.project.scheme%</argument>
            <argument>%fitbase.project.host%</argument>
            <argument type="service" id="logger"/>
        </service>

        <service id="mail" class="Fitbase\Bundle\EmailBundle\Mailer\FitbaseMailerBase">
            <argument type="service" id="kernel"/>
            <argument type="service" id="mailer"/>
            <argument type="service" id="logger"/>
            <call method="addPatcher">
                <argument type="service" id="mailer.patcher.link_code"/>
            </call>
            <call method="addPatcher">
                <argument type="service" id="mailer.patcher.image_attach"/>
            </call>
        </service>

        <service id="mail.fos" class="Fitbase\Bundle\EmailBundle\Mailer\FitbaseMailerFos" public="false">
            <argument type="service" id="kernel"/>
            <argument type="service" id="mailer"/>
            <argument type="service" id="logger"/>
            <argument type="service" id="router"/>
            <argument type="service" id="twig"/>
            <argument type="collection">
                <argument key="template" type="collection">
                    <argument key="confirmation">%fos_user.registration.confirmation.template%</argument>
                    <argument key="resetting">%fos_user.resetting.email.template%</argument>
                </argument>
                <argument key="from_email" type="collection">
                    <argument key="confirmation">%fos_user.registration.confirmation.from_email%</argument>
                    <argument key="resetting">%fos_user.resetting.email.from_email%</argument>
                </argument>
            </argument>
            <call method="addPatcher">
                <argument type="service" id="mailer.patcher.link_code"/>
            </call>
            <call method="addPatcher">
                <argument type="service" id="mailer.patcher.image_attach"/>
            </call>
        </service>

    </services>

</container>