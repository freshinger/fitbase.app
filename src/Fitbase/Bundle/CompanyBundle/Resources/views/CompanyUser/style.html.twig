<style>
    {% if colorHeader %}
    #header {
        background-color: # {{ colorHeader }} !important;
    }

    {% endif %}

    {% if colorFooter %}

    #header nav ul.nav-main ul.dropdown-menu, #header nav ul.nav-main li.dropdown.open a.dropdown-toggle, #header nav ul.nav-main li.active a, #header nav ul.nav-main li > a:hover, #header nav ul.nav-main li.dropdown:hover a {
        background-color: # {{ colorFooter }} !important;
    }

    #header.flat-menu nav ul.nav-main li:hover > a:hover, #header.flat-menu nav ul.nav-main li:hover > a {
        background-color: # {{ colorFooter }} !important;
    }

    #header nav ul.nav-main ul.dropdown-menu {
        background-color: # {{ colorFooter }} !important;
    }

    .page-top, #footer {
        background-color: # {{ colorFooter }} !important;
    }

    {% endif %}

    {% if colorBackground %}
    body {
        background-color: # {{ colorBackground }} !important;
    }

    {% endif %}
</style>