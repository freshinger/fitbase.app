<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="fitbase.block.dashboard_company" class="Fitbase\Bundle\CompanyBundle\Block\Dashboard\DashboardBlock" scope="request" >
            <tag name="sonata.block"/>
            <argument>fitbase.block.dashboard_company</argument>
            <argument type="collection">
                <argument>ROLE_FITBASE_COMPANY</argument>
            </argument>
            <argument type="service" id="templating"/>
            <argument type="service" id="security.context"/>
            <argument type="service" id="user"/>
        </service>


        <service id="fitbase.block.dashboard.statistic_user_activity" scope="request" class="Fitbase\Bundle\CompanyBundle\Block\Dashboard\StatisticUserActivityBlock">
            <tag name="sonata.block"/>
            <argument>fitbase.block.dashboard.statistic_user_activity</argument>
            <argument type="collection">
                <argument>ROLE_FITBASE_COMPANY</argument>
            </argument>
            <argument type="service" id="templating"/>
            <argument type="service" id="security.context"/>
            <argument type="service" id="entity_manager"/>
        </service>


        <service id="fitbase.block.dashboard.statistic_user_registration" scope="request" class="Fitbase\Bundle\CompanyBundle\Block\Dashboard\StatisticUserRegistrationBlock">
            <tag name="sonata.block"/>
            <argument>fitbase.block.dashboard.statistic_user_registration</argument>
            <argument type="collection">
                <argument>ROLE_FITBASE_COMPANY</argument>
            </argument>
            <argument type="service" id="templating"/>
            <argument type="service" id="security.context"/>
        </service>


        <service id="fitbase.block.dashboard.statistic_user_focus" scope="request" class="Fitbase\Bundle\CompanyBundle\Block\Dashboard\StatisticUserFocusBlock">
            <tag name="sonata.block"/>
            <argument>fitbase.block.dashboard.statistic_user_focus</argument>
            <argument type="collection">
                <argument>ROLE_FITBASE_COMPANY</argument>
            </argument>
            <argument type="service" id="templating"/>
            <argument type="service" id="security.context"/>
        </service>


        <service id="fitbase.block.dashboard.statistic_user_category" scope="request" class="Fitbase\Bundle\CompanyBundle\Block\Dashboard\StatisticUserCategoryBlock">
            <tag name="sonata.block"/>
            <argument>fitbase.block.dashboard.statistic_user_category</argument>
            <argument type="collection">
                <argument>ROLE_FITBASE_COMPANY</argument>
            </argument>
            <argument type="service" id="templating"/>
            <argument type="service" id="security.context"/>
        </service>

    </services>
</container>