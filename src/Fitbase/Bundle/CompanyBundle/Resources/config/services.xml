<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <imports>
        <import resource="admin.xml"/>
        <import resource="listeners.xml"/>
    </imports>


    <services>

        <service id="fitbase.block.header_company" class="Fitbase\Bundle\CompanyBundle\Block\CompanyHeaderBlockService"
                 public="true">
            <tag name="sonata.block"/>
            <argument>fitbase.block.header_company</argument>
            <argument type="service" id="templating"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="fitbase.block.footer_company" class="Fitbase\Bundle\CompanyBundle\Block\CompanyFooterBlockService"
                 public="true">
            <tag name="sonata.block"/>
            <argument>fitbase.block.footer_company</argument>
            <argument type="service" id="templating"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>


        <service id="fitbase_manager.company" class="Fitbase\Bundle\CompanyBundle\Service\ServiceCompany">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="fitbase_controller.company" class="Fitbase\Bundle\CompanyBundle\Controller\CompanyController">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>
        <service id="fitbase_controller.company_user"
                 class="Fitbase\Bundle\CompanyBundle\Controller\CompanyUserController">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>


        <service id="fitbase.subscriber.CompanyCategorySubscriber"
                 class="Fitbase\Bundle\CompanyBundle\Subscriber\CompanyCategorySubscriber">
            <tag name="kernel.event_subscriber"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>


    </services>

</container>
