<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

        <service id="fitbase.block.header_company" class="Fitbase\Bundle\CompanyBundle\Block\CompanyHeaderBlockService" public="true">
            <argument>fitbase.block.header_company</argument>
            <argument type="service" id="templating"/>
            <argument type="service" id="fitbase.orm.company_manager"/>
            <argument type="service" id="user"/>
            <argument type="service" id="session"/>
            <tag name="sonata.block"/>
        </service>

        <service id="fitbase.block.footer_company" class="Fitbase\Bundle\CompanyBundle\Block\CompanyFooterBlockService" public="true">
            <tag name="sonata.block"/>
            <argument>fitbase.block.footer_company</argument>
            <argument type="service" id="templating"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>


        <service id="fitbase.block.dashboard.company_questionnaire" scope="request"
                 class="Fitbase\Bundle\CompanyBundle\Block\Dashboard\CompanyQuestionnaireBlock">
            <tag name="sonata.block"/>
            <argument>fitbase.block.dashboard.company_questionnaire</argument>
            <argument type="collection">
                <argument>ROLE_COMPANY</argument>
            </argument>
            <argument type="service" id="templating"/>
            <argument type="service" id="security.context"/>
            <argument type="service" id="user"/>
            <argument type="service" id="entity_manager"/>
            <argument type="service" id="form.factory"/>
            <argument type="service" id="request"/>
        </service>

    </services>
</container>
