{% extends "FitbaseReminderBundle::reminder.html.twig" %}
{% use "form_div_layout.html.twig" %}


{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
            {% for error in errors %}
                <div class="form-group alert alert-warning">
                    {{ error.message }}
                </div>
            {% endfor %}
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}

{% block button_row -%}
    {{- form_widget(form) -}}
{%- endblock button_row %}

{% block form_row -%}
    {{- form_widget(form) -}}
    {{- form_errors(form) -}}
{%- endblock form_row %}

{% block time_widget -%}
    {{ form_widget(form.hour, { 'attr': { 'class': 'form-control' }}) }}
    </div>
<div class="col-md-4">
    {{ form_widget(form.minute, { 'attr': { 'class': 'form-control' }}) }}
    {%- endblock time_widget %}



    {% block reminder_item_widget %}
        {% spaceless %}

            <div class="row">
                <div class="col-md-12">
                    {% if form.parent is empty %}
                        {{ form_errors(form) }}
                    {% endif %}
                    {{- form_errors(form.day) -}}
                    {{- form_errors(form.time) -}}
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    {{- form_widget(form.day) -}}
                </div>
                <div class="col-md-4">
                    {{- form_widget(form.time) -}}
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <br>
                    {{ form_rest(form) }}
                    {{ form_row(form.save) }}
                </div>
            </div>
        {% endspaceless %}
    {% endblock reminder_item_widget %}




    {% block content %}
    {% spaceless %}

        {% for message in flashbag.get('reminder') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <table class="table table-striped table-hover table-responsive">
            <thead>
            <tr>
                <th class="manage-column">Tag</th>
                <th class="manage-column">Zeit</th>
                <th class="manage-column">&nbsp;</th>
            </tr>
            </thead>
            <tbody>
            {% if items|length > 0 %}
                {% for item in items %}
                    <tr class="{{ loop.index is even ? 'alternate' : '' }}">
                        <td>{{ item.day|day }}</td>
                        <td>{{ item.time|date('H:i') }}</td>
                        <td><a href="?reminder_item_id={{ item.id }}">l√∂schen</a></td>
                    </tr>
                {% endfor %}
                <tr style="background: #f2f0f0;">
                    <td><b>Total: {{ items|length }}</b></td>
                    <td colspan="2"></td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="2">Keine Erinnerungen gefunden</td>
                </tr>
            {% endif %}
            </tbody>
        </table>

        {% form_theme form _self %}

        {{ form(form) }}

    {% endspaceless %}
{% endblock content %}