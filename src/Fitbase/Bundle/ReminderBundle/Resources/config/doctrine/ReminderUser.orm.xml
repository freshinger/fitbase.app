<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Fitbase\Bundle\ReminderBundle\Entity\ReminderUser" table="fitbase_reminder_user"
            repository-class="Fitbase\Bundle\ReminderBundle\Repository\ReminderUserRepository">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="userId" type="integer" column="user_id"/>
        <field name="pause" type="integer" column="pause"/>
        <field name="pauseStart" type="datetime" column="pause_start"/>
        <field name="sendWeeklytask" type="integer" column="send_weeklytask" nullable="true"/>
        <field name="sendWeeklyquiz" type="integer" column="send_weeklyquiz" nullable="true"/>

    </entity>
</doctrine-mapping>
