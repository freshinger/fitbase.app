<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="fitbase.block.dashboard_profile"
                 class="Fitbase\Bundle\UserBundle\Block\ProfileDashboardBlockService" public="true">
            <tag name="sonata.block"/>
            <argument>fitbase.block.dashboard_profile</argument>
            <argument type="service" id="templating"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="fitbase.block.profile_focus" class="Fitbase\Bundle\UserBundle\Block\ProfileFocusBlockService"
                 public="true">
            <tag name="sonata.block"/>
            <argument>fitbase.block.profile_focus</argument>
            <argument type="service" id="templating"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="fitbase.block.dashboard.focus_statistic" scope="request"
                 class="Fitbase\Bundle\UserBundle\Block\Dashboard\UserFocusStatisticBlockService">
            <tag name="sonata.block"/>
            <argument>fitbase.block.dashboard.focus_statistic</argument>
            <argument type="collection">
                <argument>ROLE_COMPANY</argument>
            </argument>
            <argument type="service" id="templating"/>
            <argument type="service" id="security.context"/>
            <argument type="service" id="user"/>
        </service>

        <service id="fitbase.block.dashboard.user_statistic" scope="request"
                 class="Fitbase\Bundle\UserBundle\Block\Dashboard\UserActivityBlockService">
            <tag name="sonata.block"/>
            <argument>fitbase.block.dashboard.user_statistic</argument>
            <argument type="collection">
                <argument>ROLE_COMPANY</argument>
            </argument>
            <argument type="service" id="templating"/>
            <argument type="service" id="security.context"/>
            <argument type="service" id="user"/>
        </service>

    </services>
</container>