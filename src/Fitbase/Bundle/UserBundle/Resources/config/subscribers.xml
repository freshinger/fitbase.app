<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="fitbase.subscriber.UserEmailSubscriber"
                 class="Fitbase\Bundle\UserBundle\Subscriber\UserEmailSubscriber">
            <tag name="kernel.event_subscriber"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="fitbase.subscriber.UserSingleSignOnSubscriber"
                 class="Fitbase\Bundle\UserBundle\Subscriber\UserSingleSignOnSubscriber">
            <tag name="kernel.event_subscriber"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="fitbase.subscriber.UserFocusSubscriber"
                 class="Fitbase\Bundle\UserBundle\Subscriber\UserFocusSubscriber">
            <tag name="kernel.event_subscriber"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>


        <service id="fitbase.subscriber.UserFocusCategorySubscriber"
                 class="Fitbase\Bundle\UserBundle\Subscriber\UserFocusCategorySubscriber">
            <tag name="kernel.event_subscriber"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>


        <service id="fitbase.subscriber.QuestionnaireUserSubscriber"
                 class="Fitbase\Bundle\UserBundle\Subscriber\QuestionnaireUserSubscriber">
            <tag name="kernel.event_subscriber"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="fitbase.subscriber.UserProfileControllerSubscriber"
                 class="Fitbase\Bundle\UserBundle\Subscriber\UserProfileControllerSubscriber">
            <tag name="kernel.event_subscriber"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="fitbase.subscriber.user_wizard"
                 class="Fitbase\Bundle\UserBundle\Subscriber\UserWizardSubscriber">
            <argument type="service" id="entity_manager"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="fitbase.subscriber.user" class="Fitbase\Bundle\UserBundle\Subscriber\UserSubscriber">
            <argument type="service" id="entity_manager"/>
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="datetime"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="fitbase.subscriber.user_actioncode"
                 class="Fitbase\Bundle\UserBundle\Subscriber\UserActioncodeSubscriber">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <tag name="kernel.event_subscriber"/>
        </service>

    </services>

</container>
