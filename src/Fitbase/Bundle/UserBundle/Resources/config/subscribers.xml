<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="fitbase.subscriber.UserEmailSubscriber"
                 class="Fitbase\Bundle\UserBundle\Subscriber\UserEmailSubscriber">
            <tag name="kernel.event_subscriber"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="fitbase.subscriber.UserSingleSignOnSubscriber"
                 class="Fitbase\Bundle\UserBundle\Subscriber\UserSingleSignOnSubscriber">
            <tag name="kernel.event_subscriber"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

    </services>

</container>
