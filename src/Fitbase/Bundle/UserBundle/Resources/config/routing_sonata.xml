<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">


    <route id="sonata_admin_user_weeklytasks" pattern="/weeklytasks/{unique}/activate">
        <default key="_controller">FitbaseUserBundle:Admin:weeklytasks</default>
    </route>

    <route id="sonata_admin_import_user" pattern="/import/user">
        <default key="_controller">FitbaseUserBundle:AdminUser:import</default>
    </route>


    <route id="sonata_admin_invite_user" pattern="/invite/user">
        <default key="_controller">FitbaseUserBundle:AdminUser:invite</default>
    </route>

    <route id="sonata_admin_import_code" pattern="/import/code">
        <default key="_controller">FitbaseUserBundle:AdminUserActioncode:import</default>
    </route>

</routes>
