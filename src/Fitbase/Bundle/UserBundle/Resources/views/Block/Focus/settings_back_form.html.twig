{% use "form_div_layout.html.twig" %}

{%- block form_widget_compound -%}
    <style>
        .user-category-primary {
            height: 448px;
            background-image: url("/image/muskel_auswahl.jpg");
        }

        .user-category-type {
            height: 448px;
        }

        #user_focus_category_primaries {
            top: 28%;
            position: relative;
        }

        #user_focus_category_primaries .col-xs-12 {
            height: 95px;
        }

        #user_focus_category_type {
            top: 5%;
            position: relative;
        }

        #user_focus_category_type .col-xs-12 {
            height: 50px;
        }

    </style>

    <div {{ block('widget_container_attributes') }}>
        {%- if form.parent is empty -%}
            {{ form_errors(form) }}
        {%- endif -%}

        <div class="col-xs-6 user-category-primary">
            {{- form_widget(form.primaries) -}}
        </div>
        <div class="col-xs-6 user-category-type">
            {{- form_widget(form.type) -}}
        </div>
        {{- block('form_rows') -}}
        {{- form_rest(form) -}}
    </div>
{%- endblock form_widget_compound -%}

{% block form_row -%}
    {{- form_label(form) -}}
    {{- form_errors(form) -}}
    {{- form_widget(form) -}}
{%- endblock form_row %}

{%- block form_rows -%}
    {% for child in form %}
        <div class="col-xs-6">
            {{- form_row(child) -}}
        </div>
    {% endfor %}
{%- endblock form_rows -%}


{%- block choice_widget_expanded -%}
    <div class="row" {{ block('widget_container_attributes') }}>
        {%- for child in form %}
            <div class="col-xs-12">
                {{- form_widget(child) -}}
            </div>
        {% endfor -%}
    </div>
{%- endblock choice_widget_expanded -%}

{% block radio_widget -%}
    <span {% for attrname, attrvalue in label_attr %} {{ attrname }}="{{ attrvalue }}"{% endfor %}>
        <input type="radio" {{ block('widget_attributes') }}{% if value is defined %} value="{{ value }}"{% endif %}{% if checked %} checked="checked"{% endif %} />
        <span style="font-size: 1.1em; padding-left: 10px; vertical-align: middle">{{ label|striptags }}</span>
    </span>
{%- endblock radio_widget %}

{% block checkbox_widget -%}
    <span{% for attrname, attrvalue in label_attr %} {{ attrname }}="{{ attrvalue }}"{% endfor %}>
        <input type="checkbox" {{ block('widget_attributes') }}{% if value is defined %} value="{{ value }}"{% endif %}{% if checked %} checked="checked"{% endif %} />
        <span style="font-size: 1.1em; padding-left: 10px; vertical-align: middle">{{ label|striptags }}</span>
    </span>
{%- endblock checkbox_widget %}


{%- block button_row -%}
    <br/>
    <br/>
    {{- form_widget(form) -}}
{%- endblock button_row -%}