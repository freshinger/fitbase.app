{% use "form_div_layout.html.twig" %}


{% block form_rows -%}
    {% for child in form %}
        {{- form_row(child) -}}
    {% endfor %}
{%- endblock form_rows %}

{% block form_row -%}
    <div class="row form-group">
        <div class="col-md-12">
            {{- form_label(form) -}}
        </div>
        <div class="col-md-12">
            {{- form_widget(form) -}}
            {{- form_errors(form) -}}
        </div>
    </div>
{%- endblock form_row %}


{% block button_row -%}
    <div class="row form-group">
        <div class="col-md-12 col-sm-offset-6">
            {{- form_widget(form) -}}
        </div>
    </div>
{%- endblock button_row %}