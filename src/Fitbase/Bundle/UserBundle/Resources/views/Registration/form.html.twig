{% use "form_div_layout.html.twig" %}


{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
            {% for error in errors %}
                <div class="alert alert-danger">
                    {{ error.message }}
                </div>
            {% endfor %}
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}


{% block form_rows -%}
    {% for child in form %}
        {{- form_row(child) -}}
    {% endfor %}
{%- endblock form_rows %}

{% block form_row -%}
    <div class="row form-group">
        <div class="col-xs-12">
            {{- form_errors(form) -}}
            {{- form_label(form) -}}
        </div>
        <div class="col-xs-12">
            {{- form_widget(form) -}}
        </div>
    </div>
{%- endblock form_row %}


{% block checkbox_widget -%}
    <div class="row">
        <div class="col-xs-1">
            <input type="checkbox" {{ block('widget_attributes') }}{% if value is defined %} value="{{ value }}"{% endif %}{% if checked %} checked="checked"{% endif %} />
        </div>
        <div class="col-xs-11" style="padding-top: 10px;">
            Ich stimme den <a href="https://www.fitbase.de/datenschutz/">Datenschutz- und Teilnahmebedingungen</a> zu.
        </div>
    </div>
{%- endblock checkbox_widget %}



{% block button_row -%}
    <div class="row form-group">
        <div class="col-xs-12">
            {{- form_widget(form) -}}
        </div>
    </div>
{%- endblock button_row %}