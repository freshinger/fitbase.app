<div class="panel panel-default">
    <div class="panel-body">

        <h4 class="short hue">Anzahl der Ãœbungen</h4>

        <div id="chart"></div>


        <script type="text/javascript">
            (function ($) {
                $(document).ready(function () {

                    var line1 = [
                        {% if statistic|length > 0 %}
                        {% for record in statistic %}
                        ["{{ record.date|date('Y.m') }}", parseInt("{{ record.count }}")]
                        {% if loop.index != loop.last %}, {% endif %}
                        {% endfor %}
                        {% endif %}
                    ];


                    var plot2 = $.jqplot('chart', [line1, line1], {
                        series: [
                            {renderer: $.jqplot.BarRenderer},
                            {xaxis: 'x2axis', yaxis: 'y2axis'}
                        ],
                        axesDefaults: {
                            tickRenderer: $.jqplot.CanvasAxisTickRenderer,
                            tickOptions: {
                                angle: 30
                            }
                        },
                        axes: {
                            xaxis: {
                                renderer: $.jqplot.CategoryAxisRenderer
                            },
                            x2axis: {
                                renderer: $.jqplot.CategoryAxisRenderer
                            },
                            yaxis: {
                                autoscale: true
                            },
                            y2axis: {
                                autoscale: true
                            }
                        }
                    });
                });


            })(jQuery);

        </script>


    </div>
</div>