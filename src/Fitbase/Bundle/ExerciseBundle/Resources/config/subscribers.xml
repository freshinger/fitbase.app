<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="fitbase.subscriber.ExerciseReminderSubscriber"
                 class="Fitbase\Bundle\ExerciseBundle\Subscriber\ExerciseReminderSubscriber">
            <tag name="kernel.event_subscriber"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="fitbase.subscriber.ExerciseUserSubscriber"
                 class="Fitbase\Bundle\ExerciseBundle\Subscriber\ExerciseUserSubscriber">
            <tag name="kernel.event_subscriber"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="fitbase.subscriber.FeedingUserSubscriber"
                 class="Fitbase\Bundle\ExerciseBundle\Subscriber\FeedingUserSubscriber">
            <tag name="kernel.event_subscriber"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

    </services>

</container>
