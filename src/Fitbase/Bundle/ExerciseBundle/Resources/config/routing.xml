<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">


    <route id="focus" path="/focus/{slug}">
        <default key="_controller">FitbaseExerciseBundle:Focus:focus</default>
        <default key="slug"></default>
    </route>


    <route id="exercise_focus" path="/exercise/focus/{slug}">
        <default key="_controller">FitbaseExerciseBundle:Exercise:exerciseFocus</default>
        <default key="slug"></default>
    </route>

    <route id="exercise_user" path="/exercise/user/{unique}/{step}">
        <default key="_controller">FitbaseExerciseBundle:Exercise:exerciseUser</default>
    </route>

    <route id="exercise" path="/exercise/{unique}">
        <default key="_controller">FitbaseExerciseBundle:Exercise:exercise</default>
    </route>


</routes>
