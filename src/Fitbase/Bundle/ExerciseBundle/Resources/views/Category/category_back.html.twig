{% if categories is defined and categories %}
    <div class="row">
        {% for category in categories %}
            {% if category.exercises|length > 0 and category.parent is not null %}
                <div class="col-md-4">
                    <a href="{{ path('category', {'slug': category.slug}) }}">
                        <h4>{{ category.name }}</h4>
                    </a>
                    {% if category.media is defined %}
                        <a href="{{ path('category', {'slug': category.slug}) }}">
                            {% thumbnail category.media, 'preview' with {'width': 200} %}
                        </a>
                    {% endif %}
                </div>
            {% endif %}
        {% endfor %}
    </div>
{% endif %}

