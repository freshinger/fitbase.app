{{ sonata_block_render_event('breadcrumb', { 'context': 'category', 'current_uri': app.request.requestUri }) }}
<style>
    a.thumb-info span.thumb-info-title {
        color: #ffffff;
        font-size: 12px;
        font-weight: 600;
        letter-spacing: 0;
        padding: 7px 11px 9px;
        text-transform: uppercase;
    }

    .thumb-info .thumb-info-title {
        background: none repeat scroll 0 0 rgba(36, 27, 28, 0.9);
        bottom: 10%;
        color: #fff;
        font-size: 18px;
        font-weight: 700;
        left: 20px;
        letter-spacing: -1px;
        padding: 9px 11px;
        position: absolute;
        text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.2);
        text-transform: uppercase;
        transition: all 0.3s ease 0s;
        z-index: 1;
    }

    .thumb-info-inner {
        width: 100%;
    }

</style>
{% if categories is defined %}
    {% if categories|length > 0 %}
        <div class="row">
            {% for category in categories %}
                {% if category.exercises|length > 0 and category.parent is not null %}
                    <div class="col-md-3">
                        {% if category.media is defined and category.media %}
                            <a class="thumb-info" href="{{ path('category', {'slug': category.slug}) }}">
                                {% thumbnail category.media, 'preview' with {'height': 200, 'width': null} %}
                                <span class="thumb-info-title">
                                    <span class="thumb-info-inner">
                                        {{ category.name }}
                                    </span>
                                </span>
                            </a>
                        {% endif %}
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    {% endif %}
{% endif %}



