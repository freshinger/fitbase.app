{{ sonata_block_render_event('breadcrumb', { 'context': 'category', 'current_uri': app.request.requestUri }) }}
<style>
    .col-md-4 {
        padding: 15px;
        margin: 0px;
    }
    .panel {
        border: 1px solid rgba(0, 0, 0, 0.05);
        box-shadow: none;
    }
    a.thumb-info span.thumb-info-title {
        color: #909090;
        font-size: 12px;
        letter-spacing: 0;
        padding: 7px 11px 9px;
        text-transform: uppercase;
        left: 0px;
        width: 100%;
        overflow:hidden;
        white-space:nowrap;
        text-overflow:ellipsis;
    }

    .thumb-info .thumb-info-title {
        background: none repeat scroll 0 0 #f5f5f5;
        bottom: -1px;
        font-size: 18px;
        left: 20px;
        letter-spacing: -1px;
        padding: 9px 11px;
        position: absolute;
        text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.2);
        text-transform: uppercase;
        transition: all 0.3s ease 0s;
        z-index: 1;
    }
    .thumb-info img {
        display: block;
        margin-left: auto;
        margin-right: auto
    }

    .thumb-info-inner {
        width: 100%;
    }

</style>
{% if categories is defined %}
    {% if categories|length > 0 %}
        <div class="row" style="padding: 0px;">
            {% for category in categories|reverse %}
                {% if category.exercises|length > 0 and category.parent is not null %}
                    {% if category.media is defined and category.media %}
                        <div class="col-md-3 " style="padding:0px; margin-bottom: 20px; max-width: 250px; margin-right: 25px;" >
                            <a class="thumb-info" href="{{ path('category', {'slug': category.slug}) }}">
                                {% thumbnail category.media, 'preview' with {'height': 150, 'width': null} %}
                                <span class="thumb-info-title">
                                    <span class="thumb-info-inner">
                                        {{ category.name }}
                                    </span>
                                </span>
                            </a>
                        </div>
                    {% endif %}
                {% endif %}
            {% endfor %}
        </div>
    {% endif %}
{% endif %}
<br/>
<br/>

{% if exercises is defined %}
    {% if exercises|length > 0 %}
        <div class="row" style="padding: 0px;">
            <div class="col-md-12">
                <h2>Ãœbungen</h2>
            </div>
            {% for exercise in exercises %}
                <div class="col-md-4 panel" style="padding:0px; margin-bottom: 20px; max-width: 280px; margin-right: 25px;" >
                    <a class="thumb-info" href="{{ path('task', { 'slug': category.slug, 'unique': exercise.id}) }}">
                        {% if exercise.image is defined %}
                            {% thumbnail exercise.image, 'preview' with {'height': 150, 'width': null} %}
                            <span class="thumb-info-title">
                                <span class="thumb-info-inner">
                                    {{ exercise.name }}
                                </span>
                            </span>
                        {% endif %}
                    </a>
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endif %}

