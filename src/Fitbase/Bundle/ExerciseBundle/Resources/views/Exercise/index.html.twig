{{ sonata_block_render_event('breadcrumb', { 'context': 'exercises', 'current_uri': app.request.requestUri }) }}

{% if categories is defined and categories %}
    <div class="row">
        {% for categoryCompany in categories %}
            {% set category = categoryCompany.category %}
            <div class="col-md-4">
                <a href="{{ path('exercises_category', {'unique': category.slug}) }}">
                    <h4>{{ category.name }}</h4>
                </a>
                <a href="{{ path('exercises_category', {'unique': category.slug}) }}">
                    {% if category.media is defined %}
                        {% thumbnail category.media, 'preview' with {'width': 250} %}
                    {% endif %}
                </a>
            </div>
        {% endfor %}
    </div>
{% endif %}

