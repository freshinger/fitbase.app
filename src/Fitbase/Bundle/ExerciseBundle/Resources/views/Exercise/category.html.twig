{{ sonata_block_render_event('breadcrumb', { 'context': 'exercises_category', 'current_uri': app.request.requestUri }) }}

{% if categories|length > 0 %}
    <h1>Categorien ({{ categories|length }})</h1>
    <div class="row">
        {% for categoryCompany in categories %}
            <div class="col-md-4">
                <a href="{{ path('exercises_category', {'unique': categoryCompany.category.slug}) }}">
                    <h4>{{ categoryCompany.category.name }}</h4>
                </a>
                <a href="{{ path('exercises_category', {'unique': categoryCompany.category.slug}) }}">
                    {% if category.media is defined %}
                        {% thumbnail categoryCompany.category.media, 'preview' with {'width': 250} %}
                    {% endif %}
                </a>
            </div>
        {% endfor %}
    </div>
{% endif %}

