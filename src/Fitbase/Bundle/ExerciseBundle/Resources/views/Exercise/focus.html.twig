{{ sonata_block_render_event('breadcrumb', { 'context': 'focus', 'current_uri': app.request.requestUri }) }}

{% if categories is defined and categories %}
    <div class="row">
        {% for category in categories %}
            {% if category.exercises|length > 0 %}
                <div class="col-xs-4">
                    <a href="{{ path('focus', {'slug': category.slug}) }}">
                        <h4>{{ category.name }}</h4>
                    </a>
                    {% if category.media is defined %}
                        <a href="{{ path('focus', {'slug': category.slug}) }}">
                            {% thumbnail category.media, 'preview' with {'width': 200} %}
                        </a>
                    {% endif %}
                </div>
            {% endif %}
        {% endfor %}
    </div>
{% endif %}

