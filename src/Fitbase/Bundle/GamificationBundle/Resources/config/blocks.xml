<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="fitbase.gamification.block.breadcrumb"
                 class="Fitbase\Bundle\GamificationBundle\Block\Breadcrumb\GamificationBreadcrumbBlockService">
            <tag name="sonata.block"/>
            <tag name="sonata.breadcrumb"/>

            <argument>gamification</argument>
            <argument>fitbase.gamification.block.breadcrumb</argument>
            <argument type="service" id="templating"/>
            <argument type="service" id="knp_menu.menu_provider"/>
            <argument type="service" id="knp_menu.factory"/>
        </service>

        <service id="fitbase.block.dashboard_gamification" scope="request"
                 class="Fitbase\Bundle\GamificationBundle\Block\Dashboard\DashboardGamificationBlockService">
            <tag name="sonata.block"/>
            <argument>fitbase.block.dashboard_user</argument>
            <argument type="collection">
                <argument>ROLE_USER</argument>
            </argument>
            <argument type="service" id="templating"/>
            <argument type="service" id="security.context"/>
            <argument type="service" id="user"/>
            <argument type="service" id="entity_manager"/>
            <argument type="service" id="form.factory"/>
            <argument type="service" id="request"/>
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="gamification"/>
        </service>


        <service id="fitbase.block.dashboard_focus"
                 class="Fitbase\Bundle\GamificationBundle\Block\DashboardFocusBlockService" public="true">
            <tag name="sonata.block"/>
            <argument>fitbase.block.dashboard_focus</argument>
            <argument type="service" id="templating"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="fitbase.block.dashboard_tree"
                 class="Fitbase\Bundle\GamificationBundle\Block\DashboardTreeBlockService" public="true">
            <tag name="sonata.block"/>
            <argument>fitbase.block.dashboard_tree</argument>
            <argument type="service" id="templating"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="fitbase.block.dashboard_forest"
                 class="Fitbase\Bundle\GamificationBundle\Block\DashboardForestBlockService" public="true">
            <tag name="sonata.block"/>
            <argument>fitbase.block.dashboard_forest</argument>
            <argument type="service" id="templating"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="fitbase.block.dashboard_avatar"
                 class="Fitbase\Bundle\GamificationBundle\Block\DashboardAvatarBlockService" public="true">
            <tag name="sonata.block"/>
            <argument>fitbase.block.dashboard_avatar</argument>
            <argument type="service" id="templating"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="fitbase.block.dashboard_activity"
                 class="Fitbase\Bundle\GamificationBundle\Block\DashboardActivityBlockService" public="true">
            <tag name="sonata.block"/>
            <argument>fitbase.block.dashboard_activity</argument>
            <argument type="service" id="templating"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="fitbase.block.dashboard_statistic"
                 class="Fitbase\Bundle\GamificationBundle\Block\DashboardStatisticBlockService" public="true">
            <tag name="sonata.block"/>
            <argument>fitbase.block.dashboard_statistic</argument>
            <argument type="service" id="templating"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="fitbase.block.dashboard_dialog"
                 class="Fitbase\Bundle\GamificationBundle\Block\GamificationDialogBlockService" public="true">
            <tag name="sonata.block"/>
            <argument>fitbase.block.dashboard_dialog</argument>
            <argument type="service" id="templating"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>


    </services>


</container>