<div class="panel panel-default">
    <div class="panel-body panel-dashboard-block">

        <h4 class="short hue">
            {{ 'Aktivitäten und Infoeinheiten'|trans({}, 'FitbaseGamificationBundle') }}
        </h4>

        {% block content %}
            <h5 class="short hue">
                Führen Sie heute Ihre Übungen durch!
            </h5>

            <p>
                Durch einen Klick auf den Button
                gelangen Sie direkt zur heutigen Übung.
            </p>

            <a href="{{ path('focus') }}" class="btn btn-primary btn-block">
                Heutige Übung starten
            </a>

            <br/>
        {% endblock %}
        <p>
            Durch einen Klick auf den Button gelangen Sie direkt zu den Infoeinheiten und Quizzen.
        </p>
        <a href="{{ path('page_slug', {'path': '/infoeinheiten'}) }}" class="btn btn-primary btn-block">
            Zu den Infoeinheiten
        </a>
        <br/>
    </div>

    <div class="panel-footer">
        <div class="row">
            <div class="col-xs-12">
                <a href="{{ path('sonata_user_profile_show') }}" class="btn btn-default btn-block">
                    <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
                    {{ 'Fokus ändern'|trans({}, 'FitbaseGamificationBundle') }}
                </a>
            </div>
        </div>
    </div>
</div>