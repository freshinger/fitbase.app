<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

        <service id="fitbase.consumer.weeklytask_planner" class="Fitbase\Bundle\WeeklytaskBundle\Consumer\WeeklytaskPlannerConsumer">
            <tag name="sonata.notification.consumer" type="weeklytask_planner"/>
            <argument type="service" id="entity_manager"/>
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="datetime"/>
            <argument type="service" id="weeklytask"/>
            <argument type="service" id="sonata.notification.backend"/>
        </service>

        <service id="fitbase.consumer.weeklytask_creator" class="Fitbase\Bundle\WeeklytaskBundle\Consumer\WeeklytaskCreatorConsumer">
            <tag name="sonata.notification.consumer" type="weeklytask_creator"/>
            <argument type="service" id="fitbase.orm.weeklytask_manager"/>
            <argument type="service" id="datetime"/>
            <argument type="service" id="codegenerator"/>
        </service>


    </services>
</container>
