<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="fitbase.block.dashboard_weeklytask"
                 class="Fitbase\Bundle\WeeklytaskBundle\Block\WeeklytaskDashboardBlockService" public="true">
            <tag name="sonata.block"/>

            <argument>fitbase.block.dashboard_weeklytask</argument>
            <argument type="service" id="templating"/>
            <argument type="service" id="user"/>
            <argument type="service" id="entity_manager"/>
        </service>


        <service id="fitbase.block.weeklytask_collection" class="Fitbase\Bundle\WeeklytaskBundle\Block\WeeklytaskCollectionBlockService">
            <tag name="sonata.block"/>
            <argument>fitbase.block.dashboard_weeklytask</argument>
            <argument type="service" id="templating"/>
            <argument type="service" id="fitbase.orm.weeklytask_manager"/>
            <argument type="service" id="user"/>
        </service>

    </services>


</container>