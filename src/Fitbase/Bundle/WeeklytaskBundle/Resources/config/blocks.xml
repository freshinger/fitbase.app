<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="fitbase.block.dashboard_weeklytask" class="Fitbase\Bundle\WeeklytaskBundle\Block\WeeklytaskDashboardBlockService" public="true">
            <tag name="sonata.block"/>
            <argument>fitbase.block.dashboard_weeklytask</argument>
            <argument type="collection">
                <argument>ROLE_FITBASE_USER</argument>
            </argument>
            <argument type="service" id="templating"/>
            <argument type="service" id="security.context"/>
            <argument type="service" id="user"/>
            <argument type="service" id="entity_manager"/>
        </service>


        <service id="fitbase.block.weeklytask" class="Fitbase\Bundle\WeeklytaskBundle\Block\WeeklytaskBlockService">
            <tag name="sonata.block"/>
            <argument>fitbase.block.weeklytask</argument>
            <argument type="service" id="templating"/>
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="fitbase.orm.weeklytask_manager"/>
            <argument type="service" id="user"/>
        </service>


        <service id="fitbase.block.weeklytask_collection" class="Fitbase\Bundle\WeeklytaskBundle\Block\WeeklytaskCollectionBlockService">
            <tag name="sonata.block"/>
            <argument>fitbase.block.weeklytask_collection</argument>
            <argument type="service" id="templating"/>
            <argument type="service" id="fitbase.orm.weeklytask_manager"/>
            <argument type="service" id="user"/>
        </service>



    </services>


</container>