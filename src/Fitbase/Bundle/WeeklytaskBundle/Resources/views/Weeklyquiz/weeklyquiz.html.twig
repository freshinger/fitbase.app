{% extends "FitbaseWeeklytaskBundle::wochenaufgaben.html.twig" %}


{% block form_row -%}
    {{- form_widget(form) -}}
{%- endblock form_row %}

{% block button_row -%}
    {{- form_widget(form) -}}
{%- endblock button_row %}

{% block content %}


    <div class="wrap" style="margin: 11px 15px 0px 15px;">
        <h2>
            Wochenquizzen
            <a class="add-new-h2" href="?page=wochenquizzen&weeklyquiz_create=true">
                Neu hinzufügen
            </a>
            <a class="add-new-h2" href="?page=wochenaufgaben">
                Wochenaufgaben
            </a>
        </h2>

        {% for message in flashbag.get('notice') %}
            <div class="flash-notice">
                {{ message }}
            </div>
        {% endfor %}

        <div class="tablenav top">
            <div class="alignleft actions bulkactions" style="width: 100%">
                {% form_theme formSearch _self %}

                {{ form(formSearch) }}
            </div>
            <br class="clear">
        </div>

        <script type="text/javascript">
            jQuery(function (event) {
                jQuery('a.filter-role').click(function (event) {
                    var jElement = jQuery(this);
                    var jInput = jQuery('#weeklytask_search_string');
                    var jForm = jQuery('form[name=weeklytask_search]');

                    jInput.val(jElement.attr('id'));
                    jForm.submit();
                    return false;
                });
            });
        </script>


        <table class="wp-list-table widefat">
            <thead>
            <tr>
                <th class="manage-column">
                    Id
                </th>
                <th class="manage-column">
                    Wochenaufgabe
                </th>
                <th class="manage-column">
                    Name
                </th>
                <th class="manage-column">
                    Description
                </th>
                <th class="manage-column">
                    Punkte
                </th>
                <th class="manage-column">
                </th>
            </tr>
            </thead>
            <tbody>
            {% if pagerfanta.nbResults > 0 %}
                {% for quiz in pagerfanta.currentPageResults %}
                    <tr class="{{ loop.index is even ? 'alternate' : '' }}">
                        <td>
                            {{ loop.index }}
                        </td>
                        <td nowrap>
                            <a href="?page=wochenaufgaben&weeklytask_id_edit={{ quiz.weeklytaskId }}">
                                {{ quiz.weeklytaskId|weeklytask }}
                            </a>
                        </td>
                        <td nowrap>
                            <a href="?page=wochenquizzen&weeklyquiz_id_edit={{ quiz.id }}">
                                {{ quiz.name }}
                            </a>
                        </td>
                        <td>{{ quiz.description|raw }}</td>
                        <td>{{ quiz.countPoint }}</td>
                        <td>
                            <a target="_blank" href="/mitgliederbereich?weeklyquiz_id_show={{ quiz.id }}">
                                anschauen
                            </a>
                            <a href="?page=wochenquizzen&weeklyquiz_id_edit={{ quiz.id }}">
                                ändern
                            </a>
                            <a href="?page=wochenquizzen&weeklyquiz_id_remove={{ quiz.id }}">
                                löschen
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td colspan="5">Kein Remind-Plan gefunden</td>
                </tr>
            {% endif %}
            </tbody>
        </table>
        {% if pagerfanta.haveToPaginate %}
            <div class="tablenav bottom">
                <div class="tablenav-pages">
                    <span class="displaying-num">{{ pagerfanta.nbResults }}</span>
                <span class="pagination-links">
                    {% if pagerfanta.hasPreviousPage %}
                        <a href="?page=wochenquizzen&navigate=1" title="Zur ersten Seite gehen"
                           class="first-page ">«</a>
                        <a href="?page=wochenquizzen&navigate={{ pagerfanta.previousPage }}"
                           title="Zur vorherigen Seite gehen" class="prev-page">‹</a>
                    {% else %}
                        <a title="Zur ersten Seite gehen" class="first-page ">«</a>
                        <a title="Zur vorherigen Seite gehen" class="prev-page disabled">‹</a>
                    {% endif %}
                    <span class="paging-input">{{ pagerfanta.currentPage }} von <span
                                class="total-pages">{{ pagerfanta.nbPages }}</span></span>
                    {% if pagerfanta.hasNextPage %}
                        <a href="?page=wochenquizzen&navigate={{ pagerfanta.nextPage }}"
                           title="Zur nächsten Seite gehen" class="next-page">›</a>
                        <a href="?page=wochenquizzen&navigate={{ pagerfanta.nbPages }}"
                           title="Zur letzten Seite gehen" class="last-page">»</a>
                    {% else %}
                        <a title="Zur nächsten Seite gehen" class="next-page disabled">›</a>
                        <a title="Zur letzten Seite gehen" class="last-page disabled">»</a>
                    {% endif %}
                </span>
                </div>
                <br class="clear">
            </div>
        {% endif %}
    </div>


{% endblock content %}
