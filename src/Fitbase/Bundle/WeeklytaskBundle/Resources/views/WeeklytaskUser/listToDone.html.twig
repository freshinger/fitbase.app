<div class="row">
    <div class="col-xs-12 top10">
        <table class="table table-striped table-hover table-responsive">
            <thead>
            <tr>
                <th>Week</th>
                <th width="340">Wochenaufgabe</th>
                <th class="fixed">Bereich</th>
                <th class="fixed">Status</th>
                <th class="fixed">Datum</th>
                <th class="fixed">Quiz</th>
                <th class="fixed">Punkte</th>
            </tr>
            </thead>
            <tbody>
            {% if tasks|length > 0 %}
                {% for task in tasks %}
                    <tr>
                        <td class="shade">{{ task.weekId }}</td>
                        <td class="shade">
                            <a href="{{ task.postId|postTaskPermalink }}">
                                {{ task.postId|postTitle }}
                            </a>
                        </td>
                        <td class="shade center">{{ task.weeklytaskId|category }}</td>
                        <td class="shade center"><img src="{{ task.done|statusIcon }}"
                                                      alt="{{ task.postId|postTitle }}"/></td>
                        <td class="shade center">{{ task.doneDate|date('d.m.Y') }}</td>
                        <td class="shade center" nowrap>
                            {% set code = task.weeklytaskId|quizCode %}
                            {% if code|length > 0 %}
                                {{ task.weeklytaskId|quizName }}
                            {% endif %}
                        </td>
                        <td class="shade center">{{ task.countPoint }}</td>
                    </tr>
                {% endfor %}
                <tr style="background: #f2f0f0;">
                    <td nowrap><b>Total: {{ tasks|length }}</b></td>
                    <td colspan="7"></td>
                </tr>
            {% else %}
                <tr style="background: #f2f0f0;">
                    <td colspan="7">Keine Aufgaben wurde bearbeitet</td>
                </tr>
            {% endif %}
            </tbody>
        </table>
    </div>
</div>