<div class="row">
    <div class="col-xs-12 top10">
        <table class="table table-striped table-hover table-responsive">
            <thead>
            <tr>
                <th>#</th>
                <th width="340">Wochenaufgabe</th>
                <th class="fixed">Bereich</th>
                <th class="fixed">Status</th>
                <th class="fixed">Datum</th>
                <th class="fixed">Punkte</th>
            </tr>
            </thead>
            <tbody>
            {% if tasks|length > 0 %}
                {% for task in tasks %}
                    <tr>
                        <td class="shade">{{ task.taskId|postTaskWeek }}</td>
                        <td class="shade"><a href="{{ task.taskId|postTaskPermalink }}">{{ task.taskId|postTaskTitle }}</a></td>
                        <td class="shade center">{{ task.taskId|postTaskCategory }}</td>
                        <td class="shade center"><img src="{{ task.done|statusIcon }}" alt="{{ task.taskId|postTaskTitle }}"/></td>
                        <td class="shade center">{{ task.date|date('d.m.Y') }}</td>
                        <td class="shade center">{{ task.taskId|postTaskPoints }}</td>
                    </tr>
                {% endfor %}
                <tr style="background: #f2f0f0;">
                    <td><b>Total: {{ tasks|length }}</b></td>
                    <td colspan="6"></td>
                </tr>
            {% else %}
                <tr style="background: #f2f0f0;">
                    <td colspan="6">Keine Aufgaben wurde bearbeitet</td>
                </tr>
            {% endif %}
            </tbody>
        </table>
    </div>
</div>