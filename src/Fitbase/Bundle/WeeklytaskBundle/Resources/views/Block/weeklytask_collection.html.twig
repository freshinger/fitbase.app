<style>
    .scroll {
        overflow-y: scroll;
        max-height: 850px;
        padding-right: 30px;
    }
</style>

{% if weeklytasks is defined %}
    <div class="row">
        <div class="col-xs-12">
            <h4>{{ "Ihre vorherigen Einheiten" | trans({}, 'FitbaseWeeklytaskBundle') }}</h4>
        </div>
    </div>

    <div class="row scroll">

        {% for weeklytaskUser in weeklytasks %}
            {% set weeklytask = weeklytaskUser.task %}
            {% if weeklytask is defined and weeklytask %}

                <div class="col-xs-12">
                    <div class="well">
                        <div class="row thumb-info">
                            <div class="col-xs-12">
                                <a href="{{ path('weeklytask_user_view', {'unique': weeklytaskUser.id}) }}">

                                    {% set icon = icon(weeklytask) %}
                                    {% if icon is defined and icon %}
                                        {{ icon|raw }}
                                    {% else %}
                                        {% set category = weeklytask.categories[0] %}
                                        {% if category is defined and  category %}
                                            {% thumbnail category, 'thumbnail' with { 'title': null } %}
                                        {% endif %}
                                    {% endif %}
                                </a>
                            </div>
                            <div class="col-xs-12 thumb-info-title">
                                <a class="thumb-info-inner"
                                   href="{{ path('weeklytask_user_view', {'unique': weeklytaskUser.id}) }}">
                                    {{ weeklytask.name }}
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

            {% endif %}
        {% endfor %}
    </div>
{% endif %}


