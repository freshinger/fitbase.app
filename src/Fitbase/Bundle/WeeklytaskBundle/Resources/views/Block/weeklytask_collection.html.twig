<style>

    .panel {
        /*width: auto;*/
        border: 1px solid rgba(0, 0, 0, 0.05);
        background: none repeat scroll 0 0 rgba(245, 245, 245, 0.9);
        box-shadow: none;
    }

    a.thumb-info span.thumb-info-title {
        color: #909090;
        font-size: 12px;
        letter-spacing: 0;
        padding: 7px 11px 9px;
        text-transform: uppercase;
        left: 0px;
        width: 100%;
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
    }

    .thumb-info .thumb-info-title {
        background: none repeat scroll 0 0 rgba(245, 245, 245, 0.9);
        bottom: -1px;
        font-size: 18px;
        left: 20px;
        letter-spacing: -1px;
        padding: 9px 11px;
        position: absolute;
        text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.2);
        text-transform: uppercase;
        transition: all 0.3s ease 0s;
        z-index: 1;
    }

    .thumb-info img {
        display: block;
        margin-left: auto;
        margin-right: auto
    }

    .thumb-info-inner {
        width: 100%;
    }

    a.thumb-info img {
        height: auto;
        width: auto;
        max-width: 205px;
        max-height: 113px;
    }

</style>

{% if weeklytasks is defined %}
    <div class="row" style="padding-right: 30px; max-width: 237px;">
        <div class="col-md-12" style="padding: 0px !important;">
            <h4>Ihre vorherigen Einheiten</h4>
        </div>
        {% for weeklytaskUser in weeklytasks|slice(0, 6) %}
            {% set weeklytask = weeklytaskUser.task %}
            {% if weeklytask is defined and weeklytask %}
                <div class="col-md-12 panel" style="padding: 0px !important;">
                    <a class="thumb-info" href="{{ path('weeklytask_user_view', {'unique': weeklytaskUser.id}) }}">

                        <!-- icon(weeklytask) -->
                        {% set icon = icon(weeklytask) %}
                        {% if icon is defined and icon %}
                            {{ icon|raw }}
                        {% else %}
                            {% set category = weeklytask.categories[0] %}
                            {% if category is defined and  category %}
                                {% thumbnail category, 'thumbnail' with {'height': null, 'width': null} %}
                            {% endif %}
                        {% endif %}

                        <span class="thumb-info-title">
                            <span class="thumb-info-inner">
                                {{ weeklytask.name }}
                            </span>
                        </span>
                    </a>
                </div>
            {% endif %}
        {% endfor %}
    </div>
{% endif %}


