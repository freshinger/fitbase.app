{% extends 'FitbaseWeeklytaskBundle::layout.html.twig' %}

{% block content %}
    {{ sonata_block_render_event('breadcrumb', { 'context': 'weeklyquiz_user', 'current_uri': app.request.requestUri }) }}

    <div class="row">

        {% if weeklyquiz is defined and weeklyquiz %}
            {% set quiz = weeklyquiz.quiz %}
            <div class="col-md-12">
                <h3 class="modal-title">
                    {{ quiz.name }}
                </h3>

                <p class="modal-description">
                    {{ quiz.description|raw }}
                </p>
            </div>
        {% endif %}

    </div>

    {% if form is defined and form %}
        {% form_theme form "FitbaseWeeklytaskBundle:Weeklytask:view_quiz_form.html.twig" %}
        {{ form(form) }}
    {% endif %}

    <script type="text/javascript">
        $(function () {
            var container = $(document);
            {% if notices is defined and notices %}
            {% for notice in notices %}
            var event = $.extend({
                type: 'weeklyquiz_user_notice'
            }, {{ notice|raw|json_encode()|raw }});
            container.trigger(event);
            {% endfor %}
            {% endif %}
        });
    </script>
{% endblock %}

