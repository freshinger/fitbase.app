{% extends "FitbaseQuestionnaireBundle::modal.html.twig" %}

{% block content %}

    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <div class="modal-header">
                <div class="row">
                    <div class="col-md-12">
                        <h3 class="modal-title">
                            {{ questionnaire.name }}
                        </h3>

                        <p class="modal-description">
                            {{ questionnaire.description|raw }}
                        </p>
                    </div>
                </div>
            </div>

            {% form_theme form "FitbaseQuestionnaireBundle::form.html.twig" %}

            {{ form(form) }}

        </div>
    </div>

{% endblock content %}