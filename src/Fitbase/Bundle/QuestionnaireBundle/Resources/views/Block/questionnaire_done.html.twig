{% extends 'SonataPageBundle::layout.html.twig' %}


{% block content %}


    <div class="panel-info">
        <h2>{{ "Ihre Auswertung" | trans({}, 'FitbaseQuestionnaireBundle') }}</h2>

        <div class="panel-body">
            <div class="row">
                <div class="col-md-6">
                    <h4>{{ "Allgemeiner Gesundheitszustand" | trans({}, 'FitbaseQuestionnaireBundle') }}</h4>

                    <p style="height: 150px; line-height: 21px; font-size: 13px;">
                        {{ questionnaireUser.countPointHealth|health|recommendation1 }}
                    </p>

                    <div class="circular-bar center">
                        <input data-displayinput="false" value="{{ questionnaireUser.countPointHealth|health }}"
                               data-linecap="round" class="knob"
                               style="display: none;">

                        <div class="circular-bar-content">
                            <strong>0%</strong>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <h4>{{ "Belastungsprofil" | trans({}, 'FitbaseQuestionnaireBundle') }}</h4>

                    <p style="height: 150px; line-height: 21px; font-size: 13px;">
                        {{ questionnaireUser.countPointStrain|strain|recommendation2 }}
                    </p>

                    <div class="circular-bar center">
                        <input data-displayinput="false" data-readonly="true"
                               value="{{ questionnaireUser.countPointStrain|strain }}"
                               data-linecap="round" class="knob" style="display: none;" readonly="readonly">

                        <div class="circular-bar-content">
                            <strong>0%</strong>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <a href="" class="btn btn-primary">
                        {{ "Fenter schlie√üen" | trans({}, 'FitbaseQuestionnaireBundle') }}
                    </a>
                </div>
            </div>
        </div>
    </div>


{% endblock content %}