{% extends "FitbaseQuestionnaireBundle::modal.html.twig" %}


{% block content %}
    <div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <div class="row">
                <div class="col-xs-12">
                    <h4 class="modal-title">Ihre Auswertung</h4>
                </div>
            </div>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-xs-4">
                    <h4>Allgemeiner Gesundheitszustand</h4>

                    <p style="height: 150px; line-height: 21px; font-size: 13px;">
                        {{ percentage1|recommendation1 }}
                    </p>

                    <div class="circular-bar center">
                        <input data-displayinput="false" value="{{ percentage1 }}" data-linecap="round" class="knob"
                               style="display: none;">

                        <div class="circular-bar-content">
                            <strong>0%</strong>
                        </div>
                    </div>
                </div>
                <div class="col-xs-4">
                    <h4>&nbsp;<br/>Belastungsprofil</h4>

                    <p style="height: 150px; line-height: 21px; font-size: 13px;">
                        {{ percentage2|recommendation2 }}
                    </p>

                    <div class="circular-bar center">
                        <input data-displayinput="false" data-readonly="true" value="{{ percentage2 }}"
                               data-linecap="round" class="knob" style="display: none;" readonly="readonly">

                        <div class="circular-bar-content">
                            <strong>0%</strong>
                        </div>
                    </div>
                </div>
                <div class="col-xs-4">
                    <h4>&nbsp;<br/>Rückenprofil</h4>

                    <div class="panel panel-default" style="margin-top: 20px;">
                        <div class="panel-body" style="padding: 0px;">
                            <img src="/wp-content/plugins/fitbase/assets/img/questionnaire_sn.png"
                                 style="width: 90%;">

                            <div class="options-overlay">
                                {% if au %}
                                    <div class="col-xs-12">
                                        <em class="icon icon-check"></em>
                                        Augen-Entspannung
                                    </div>
                                {% endif %}
                                {% if rs %}
                                    <div class="col-xs-12">
                                        <em class="icon icon-check"></em>
                                        RSI-Prävention
                                    </div>
                                {% endif %}
                                {% if th %}
                                    <div class="col-xs-12">
                                        <em class="icon icon-check"></em>
                                        Thera-Band®
                                    </div>
                                {% endif %}
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="modal-footer" style="margin-top: 0px;">
                <button type="button" class="btn btn-primary" data-dismiss="modal">
                    Fenter schließen und Übungen starten
                </button>
            </div>
        </div>
    </div>
{% endblock content %}