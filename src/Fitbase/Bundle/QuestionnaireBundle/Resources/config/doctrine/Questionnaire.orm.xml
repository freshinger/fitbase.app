<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Fitbase\Bundle\QuestionnaireBundle\Entity\Questionnaire" table="fitbase_questionnaire"
            repository-class="Fitbase\Bundle\QuestionnaireBundle\Repository\QuestionnaireRepository">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        <field name="name" type="string" column="name"/>
        <field name="format" type="string" column="format" nullable="true"/>
        <field name="description" type="text" column="description"/>

        <one-to-many field="company" target-entity="Fitbase\Bundle\QuestionnaireBundle\Entity\QuestionnaireCompany"
                     mapped-by="questionnaire"/>
        <one-to-many field="questions" target-entity="Fitbase\Bundle\QuestionnaireBundle\Entity\QuestionnaireQuestion"
                     mapped-by="questionnaire">
            <cascade>
                <cascade-all/>
            </cascade>
        </one-to-many>

    </entity>
</doctrine-mapping>
