<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

        <service id="fitbase.block.dashboard.questionnaire_statistic" scope="request"
                 class="Fitbase\Bundle\QuestionnaireBundle\Block\Dashboard\QuestionnaireBlock">
            <tag name="sonata.block"/>
            <argument>fitbase.block.dashboard.questionnaire_statistic</argument>
            <argument type="collection">
                <argument>ROLE_COMPANY</argument>
            </argument>
            <argument type="service" id="templating"/>
            <argument type="service" id="security.context"/>
            <argument type="service" id="user"/>
        </service>

        <service id="fitbase.block.dashboard.questionnaire_statistic_question" scope="request"
                 class="Fitbase\Bundle\QuestionnaireBundle\Block\Dashboard\QuestionnaireQuestionBlock">
            <tag name="sonata.block"/>
            <argument>fitbase.block.dashboard.questionnaire_statistic_question</argument>
            <argument type="collection">
                <argument>ROLE_COMPANY</argument>
            </argument>
            <argument type="service" id="templating"/>
            <argument type="service" id="security.context"/>
            <argument type="service" id="user"/>
        </service>

        <service id="fitbase.block.dashboard.questionnaire_question_last" scope="request"
                 class="Fitbase\Bundle\QuestionnaireBundle\Block\Dashboard\QuestionnaireQuestionLastBlock">
            <tag name="sonata.block"/>
            <argument>fitbase.block.dashboard.questionnaire_question_last</argument>
            <argument type="collection">
                <argument>ROLE_COMPANY</argument>
            </argument>
            <argument type="service" id="templating"/>
            <argument type="service" id="security.context"/>
            <argument type="service" id="user"/>
        </service>

        <service id="fitbase.block.dashboard.company_questionnaire" scope="request"
                 class="Fitbase\Bundle\QuestionnaireBundle\Block\Dashboard\QuestionnaireCompanyBlock">
            <tag name="sonata.block"/>
            <argument>fitbase.block.dashboard.company_questionnaire</argument>
            <argument type="collection">
                <argument>ROLE_COMPANY</argument>
            </argument>
            <argument type="service" id="templating"/>
            <argument type="service" id="security.context"/>
            <argument type="service" id="user"/>
            <argument type="service" id="entity_manager"/>
            <argument type="service" id="form.factory"/>
            <argument type="service" id="request"/>
        </service>
    </services>
</container>
