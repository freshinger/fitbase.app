<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>


        <service id="fitbase_listener.menteevervalten" class="Fitbase\Bundle\FitbaseBundle\Listener\UserListener">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <tag name="kernel.event_listener" event="mentor_create" method="onMentorCreateEvent"/>
            <tag name="kernel.event_listener" event="mentor_update" method="onMentorUpdateEvent"/>
            <tag name="kernel.event_listener" event="mentee_create" method="onMenteeCreateEvent"/>
            <tag name="kernel.event_listener" event="mentee_update" method="onMenteeUpdateEvent"/>
        </service>

        <service id="fitbase_listener.menteevervalten_meta" class="Fitbase\Bundle\FitbaseBundle\Listener\UserMetaListener">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <tag name="kernel.event_listener" event="mentor_created" method="onMentorCreatedEvent"/>
            <tag name="kernel.event_listener" event="mentee_created" method="onMenteeCreatedEvent"/>
        </service>

        <service id="fitbase_listener.menteevervalten_email"
                 class="Fitbase\Bundle\FitbaseBundle\Listener\EmailListener">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <tag name="kernel.event_listener" event="mentor_created" method="onMentorCreatedEvent" priority="-128"/>
            <tag name="kernel.event_listener" event="mentee_created" method="onMenteeCreatedEvent" priority="-128"/>
        </service>

    </services>


</container>
