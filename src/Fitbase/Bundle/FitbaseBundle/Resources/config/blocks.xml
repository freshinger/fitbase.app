<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="fitbase.block.dashboard" class="Fitbase\Bundle\FitbaseBundle\Block\DashboardBlockService" scope="request">
            <tag name="sonata.block"/>
            <argument>fitbase.block.dashboard</argument>
            <argument type="service" id="templating"/>
            <argument type="collection">
                <argument key="ROLE_FITBASE_COMPANY" type="service" id="fitbase.block.dashboard_company"/>
                <argument key="ROLE_FITBASE_USER" type="service" id="fitbase.block.dashboard_gamification"/>
            </argument>
            <argument type="service" id="security.context"/>
        </service>

        <service id="fitbase.block.dashboard_company" class="Fitbase\Bundle\FitbaseBundle\Block\Dashboard\DashboardCompanyBlockService" scope="request" >
            <tag name="sonata.block"/>
            <argument>fitbase.block.dashboard_company</argument>
            <argument type="collection">
                <argument>ROLE_FITBASE_COMPANY</argument>
            </argument>
            <argument type="service" id="templating"/>
            <argument type="service" id="security.context"/>
            <argument type="service" id="user"/>
        </service>

    </services>


</container>
