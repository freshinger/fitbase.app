<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">


    <imports>
        <import resource="http_kernel.xml"/>
        <import resource="admin.xml" />
    </imports>

    <services>

        <service id="user" class="Fitbase\Bundle\FitbaseBundle\Service\ServiceUser">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="datetime" class="Fitbase\Bundle\FitbaseBundle\Service\ServiceDatetime">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>


        <service id="entity_manager" class="%doctrine.orm.entity_manager.class%" factory-service="doctrine" factory-method="getManager"/>


    </services>


</container>
