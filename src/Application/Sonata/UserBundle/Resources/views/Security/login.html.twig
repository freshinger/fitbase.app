{% extends "SonataUserBundle:Security:base_login.html.twig" %}

{% block fos_user_content %}
    <div class="row">
        <div class="col-xs-1">
        </div>
        <div class="col-xs-5">
            <div class="panel">
                <div class="panel-heading">
                    <h2 class="col-sm-offset-1">{{ 'title_user_authentication'|trans({}, 'SonataUserBundle') }}</h2>
                </div>
                <div class="panel-body">
                    <p>
                        Herzlich willkommen auf fitbase.de. Wir freuen uns Sie begrüßen zu dürfen. Bitte loggen Sie sich
                        mit
                        Ihren Zugangsdaten ein.
                    </p>
                    {% if error %}
                        <div class="alert alert-danger alert-error">{{ error|trans({}, 'FOSUserBundle') }}</div>
                    {% endif %}

                    <form action="{{ path("fos_user_security_check") }}" method="post" role="form"
                          class="form-horizontal">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

                        <div class="row form-group">
                            <div class="col-xs-12">
                                <label for="username" class="control-label">
                                    {{ 'security.login.username'|trans({}, 'FOSUserBundle') }}
                                </label>
                            </div>

                            <div class="col-xs-12 ">
                                <input type="text" class="form-control" id="username"
                                       name="_username" value="{{ last_username }}"
                                       required="required"/>
                            </div>
                        </div>

                        <div class="row form-group control-group">
                            <div class="col-xs-12">
                                <label for="password" class="control-label">
                                    {{ 'security.login.password'|trans({}, 'FOSUserBundle') }}
                                </label>
                            </div>
                            <div class="col-xs-12">
                                <input type="password" class="form-control" id="password" name="_password"
                                       required="required"/>
                            </div>
                        </div>

                        <div class="row form-group">
                            <div class="col-xs-12">
                                <div class="checkbox control-group">
                                    <label for="remember_me">
                                        <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
                                        &nbsp;&nbsp;
                                        {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="row form-group control-group">
                            <div class="col-xs-12 controls">
                                <a href="{{ path('fos_user_resetting_request') }}">{{ 'forgotten_password'|trans({}, 'SonataUserBundle') }}</a>
                            </div>
                        </div>

                        <div class="row form-group">
                            <div class="col-xs-12">
                                <input type="submit" id="_submit" name="_submit" class="btn btn-primary"
                                       value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}"/>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </div>
        <div class="col-xs-5">
            {% render controller("FitbaseUserBundle:Registration:code", { 'internal': true }) %}
        </div>
        <div class="col-xs-1">
        </div>
    </div>
{% endblock fos_user_content %}
