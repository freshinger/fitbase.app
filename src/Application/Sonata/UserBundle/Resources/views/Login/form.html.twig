{% use "form_div_layout.html.twig" %}


{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
            {% for error in errors %}
                <div class="alert alert-danger">
                    {{ error.message }}
                </div>
            {% endfor %}
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}


{% block form_rows -%}
    {% for child in form %}
        {{- form_row(child) -}}
    {% endfor %}
{%- endblock form_rows %}

{% block form_row -%}
    <div class="row form-group">
        <div class="col-xs-12">
            {{- form_errors(form) -}}
            {{- form_label(form) -}}
        </div>
        <div class="col-xs-12">
            {{- form_widget(form) -}}
        </div>
    </div>
{%- endblock form_row %}


{% block button_row -%}

    <div class="row form-group control-group">
        <div class="col-xs-12 controls">
            <a href="{{ path('fos_user_resetting_request') }}">{{ 'forgotten_password'|trans({}, 'SonataUserBundle') }}</a>
        </div>
    </div>

    <div class="row form-group">
        <div class="col-xs-12">
            {{- form_widget(form) -}}
        </div>
    </div>
{%- endblock button_row %}